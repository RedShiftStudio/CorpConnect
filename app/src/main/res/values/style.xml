<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Основная тема приложения -->
    <style name="Theme.CorpConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorSecondary">@color/accent_color</item>

        <item name="android:colorBackground">@color/background_color</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:navigationBarColor">@color/main_color</item>
    </style>

    <style name="BottomNavNoFocus" parent="Widget.Design.BottomNavigationView">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/divider_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Стиль для входящих сообщений -->
    <style name="IncomingMessageStyle">
        <item name="android:background">@drawable/bg_message_incoming</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Стиль для исходящих сообщений -->
    <style name="OutgoingMessageStyle">
        <item name="android:background">@drawable/bg_message_outgoing</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


</resources>