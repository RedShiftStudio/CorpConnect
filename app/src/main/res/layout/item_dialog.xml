<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- Аватар собеседника -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- Имя собеседника -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Имя сотрудника"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/avatar"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Последнее сообщение -->
    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Последнее сообщение"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintLeft_toLeftOf="@id/contactName"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Время последнего сообщения -->
    <TextView
        android:id="@+id/lastMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30"
        android:textColor="#808080"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Индикатор непрочитанных сообщений -->
    <TextView
        android:id="@+id/unreadIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_unread"
        android:gravity="center"
        android:backgroundTint="@color/main_color"
        app:layout_constraintTop_toBottomOf="@id/lastMessage"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>